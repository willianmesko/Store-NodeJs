{% extends 'layout.njk' %}

{% block content %}
<section class="form-section password">
  <form action="/users/forgot-password" method="post">
    <h3 class="form-section__title">Esqueceu a senha?</h3>
    <div class="form-section__fields">
      <div class="item">
        <div class="item__title">Email</div>
          <div class="item__input">
            <input 
              type="email" 
              name="email" 
              placeholder="Digite o email cadastrado" 
              onblur="validateEmail(event)"
            >
          </div>
        </div>
    </div>
    <button class="button" type="submit">Recuperar senha</button>
  </form>
</section>
{% endblock %}
