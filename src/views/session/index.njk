{% extends 'layout.njk' %}

{% block content %}
<section class="form-section login">
  <form action="/users/login" method="post">
    <h3 class="form-section__title">Entrar</h3>
    <div class="form-section__fields">
      {% include 'session/fields.njk' %}
    </div>
    <button class="button" type="submit">Entrar</button>
    <div class="form-section__footer">
      <ul>
        <li>
          <a href="/users/register">Registre-se</a>
        </li>
        <li>
          <a href="/users/forgot-password">Esqueci minha senha</a>
        </li>
      </ul>
    </div>
  </form>
</section>
{% endblock %}
