{% extends 'layout.njk' %}

{% block content %}
<section class="form-section">
  <form action="/products/{{ product.id }}?_method=PUT" method="post" enctype="multipart/form-data">
    <h3 class="form-section__title">Editar produto</h3>
    <div class="form-section__fields">
      {% include 'products/fields.njk' %}
    </div>
    <button class="button button--edit" type="submit">Atualizar</button>
  </form>

  <form action="/products/{{ product.id }}?_method=DELETE" method="post" enctype="multipart/form-data">
    <button class="button button--remove" type="submit">Deletar</button>
  </form>
</section>
{% endblock %}
